{
  "compilerOptions": {
    "target": "ESNext", // Ensure you're targeting modern JavaScript features
    "module": "ESNext", // Enable ES modules
    "moduleResolution": "node", // Use Node module resolution strategy
    "jsx": "preserve", // Enable JSX syntax for Vue
    "esModuleInterop": true, // Allow default imports from modules without a default export
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip library type checking (for faster builds)
    "resolveJsonModule": true, // Allow importing JSON files
    "lib": ["ESNext", "DOM"], // Include the necessary libraries
    "baseUrl": ".", // Set the base URL for relative paths
    "paths": {
      "@/*": ["src/*"] // Allow importing files with @ prefix
    }
  },
  "include": [
    "src/**/*", // Include all files in the src directory
    "node_modules/vuetify/**/*.d.ts" // Include Vuetify type definitions if needed
  ]
}
